<div class="container page-content">
  <div class="row">
    <div class-"span12">
      <div class="box-container">
        <div style="margin-left: auto; margin-right: auto; width: 20em" ><br />
          <h2 class="page-title">Add category</h2>

          <%= simple_form_for(:category, html: { class: 'form-horizontal' }) do |f| %>
            <%= f.label :name %>
            <%= f.text_field :name %>

            <%= f.submit "Opret", class: "btn span3 btn-realto-form btn-large" %>
          <% end %>
        
        </div>
      </div>
    </div>
  </div>
</div>